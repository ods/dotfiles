[alias]
	aliases = ! git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /' | sort
	lg = log --graph --abbrev-commit --decorate --all
	st = ! git log -1 HEAD -- && git status -bs -- 
	echo = ! echo "$@" && :
